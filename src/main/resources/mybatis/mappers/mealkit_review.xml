<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.mealkitReview">

	<resultMap type="mealkitReviewVO" id="ReviewInfo">

		<id property="no" column="no"/>
		<result property="id" column="id"/>
		<result property="mealkitNo" column="mealkit_no"/>
		<result property="pictures" column="pictures"/>
		<result property="contents" column="contents"/>
		<result property="rating" column="rating"/>
		<result property="postDate" column="post_date"/>
			
		<association property="mealkitVO" javaType="mealkitVO">
			<id property="no" column="no"/>
			<result property="title" column="title"/>
			<result property="contents" column="contents"/>
		</association>
		
		<association property="memberVO" javaType="memberVO">
			<result property="nickname" column="nickname"/>
		</association>
	
	</resultMap>
	
	<select id="selectReviewsInfo" parameterType="mealkitVO" resultMap="ReviewInfo">
		<![CDATA[
	        SELECT mr.no, mr.contents, mr.rating, mr.post_date, m.nickname
			FROM mealkit_review mr 
			LEFT JOIN mealkit k
			ON k.no = mr.mealkit_no 
			LEFT JOIN member m 
			ON mr.id = m.id 
			WHERE k.no = #{no};
        ]]>
	</select>

	<select id="selectMyReviewInfo" parameterType="int" resultMap="ReviewInfo">
		<![CDATA[
	        SELECT mr.no, mr.contents, mr.rating, k.title, k.contents 
			FROM mealkit_review mr 
			LEFT JOIN mealkit k
			ON k.no = mr.mealkit_no 
			WHERE mr.no = #{no};
        ]]>
	</select>
		
</mapper>